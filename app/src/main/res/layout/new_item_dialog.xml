<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_item_title"
        android:background="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:textColor="@color/titleColor"/>

    <EditText
        android:id="@+id/new_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="16dp"
        android:hint="@string/item_name"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_item_class"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginTop="5dp"/>

    <Spinner
        android:id="@+id/new_item_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/drop_down_array"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_item_type"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginTop="5dp"/>

    <Spinner
        android:id="@+id/new_item_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/drop_down_array"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/new_item_date_time_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="9/18/2018"
        android:layout_margin="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <Button
            android:id="@+id/new_item_date_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_item_pick_date"
            android:textAlignment="center"
            android:layout_weight="0.5"
            android:onClick="showDatePicker"/>

        <Button
            android:id="@+id/new_item_time_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_item_pick_time"
            android:textAlignment="center"
            android:layout_weight="0.5"
            android:onClick="showTimePicker"/>
    </LinearLayout>

</LinearLayout>